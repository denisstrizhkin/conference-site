{% extends "base.jinja" %}
{% block title %}{{ title }}{% endblock %}
{% block main %}
    <div class="d-flex justify-content-center">
        <div class="card text-center card__form">
            <h4 class="card-header">Войти</h4>
            <div class="card-body">
                {% if error %}<div class="alert alert-danger" role="alert">{{ error }}</div>{% endif %}
                <form action="/user/login" method="post">
                    <div class="mb-3">
                        <label class="form-label">
                            Логин
                            <input type="login"
                                   class="form-control"
                                   name="email"
                                   placeholder="Введите логин"
                                   required>
                        </label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">
                            Пароль
                            <input type="password"
                                   class="form-control"
                                   name="password"
                                   placeholder="Введите пароль"
                                   required>
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary mb-3">Войти</button>
                </form>
                <p>
                    Нет аккаунта? <a href="/user/register">Создать</a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
